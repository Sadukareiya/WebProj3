<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <!-- 開発モードの設定 -->
    <constant name="struts.devMode" value="true" />

    <!-- パッケージ定義 -->
    <package name="com.diworksdev.webproj3.action" extends="struts-default">

        <!-- HelloStrutsAction のアクション設定 -->
        <action name="HelloStrutsAction"
                class="com.diworksdev.webproj3.action.HelloStrutsAction"
                method="execute">
            <result name="success">hello.jsp</result>
            <result name="error">helloStrutsError.jsp</result>
        </action>

        <!-- WelcomeAction のアクション設定 -->
        <action name="WelcomeAction"
                class="com.diworksdev.webproj3.action.WelcomeAction"
                method="execute">
            <result name="success">welcome.jsp</result>
        </action>

        <!-- LoginAction のアクション設定 -->
        <action name="LoginAction"
                class="com.diworksdev.webproj3.action.LoginAction"
                method="execute">
            <result name="success">login.jsp</result>
            <result name="error">loginError.jsp</result>
        </action>

    </package>
</struts>